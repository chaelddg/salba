      <section id="main-content">
          <section class="wrapper">
              <!--overview start-->
            <div class="row">
              <div class="col-lg-12">
                <h3 class="page-header"><i class="fa fa-laptop"></i> Book List</h3>
                <ol class="breadcrumb">
                  <li><i class="fa fa-home"></i><a href="/admin">Home</a></li>
                  <li><i class="fa fa-laptop"></i>Book List</li>
                </ol>
              </div>

              <div class="col-lg-12">
                <div class="panel">
                  <div class="panel-body">
                      <form action="/print/selection" method="POST">
                        <div class="form-group">
                          <label class="col-sm-2 control-label">Category</label>
                          <div class="col-sm-10">
                            <select id="category" name="status" class="form-control input-md m-bot15">
                                <option value="all">All</option>
                                <option value="itbooks">IT</option>
                                <option value="psychbooks">Psychology</option>
                                <option value="religionbooks">Religion</option>
                                <option value="literaturebooks">Literature</option>
                                <option value="historybooks">History</option>
                            </select>
                          </div>
                        </div> <!-- END FORM GROUP -->
                        <div class="form-group">
                            <label class="control-label col-lg-2" for="inputSuccess">Print Option</label>
                            <div class="col-lg-10">
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="optionsRadios" id="optionsRadios1" value="all" checked>
                                        Print All
                                    </label>
                                </div>
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="optionsRadios" id="optionsRadios2" value="available">
                                        Print ONLY Available
                                    </label>
                                </div>
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="optionsRadios" id="optionsRadios3" value="obsolete">
                                        Print ONLY Obsolete
                                    </label>
                                </div>
                                <div>
                                    <button class="btn btn-success" type="submit" style="color:white"><i class="fa fa-print"> Print</i></button>
                                </div>
                            </div>
                        </div>
                      </form>
                  </div>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-lg-12">
                <table id="borrowers_table" style="margin-top: 10px; width: 100%">
                  <thead>
                    <tr>
                      <th style="text-align: center">ISBN</th>
                      <th style="text-align: center">Title</th>
                      <th style="text-align: center">Author</th>
                      <th style="text-align: center">Category</th>
                      <th style="text-align: center">Status</th>
                      <th style="text-align: center">Quantity</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% books.forEach(function(data, i) {%>
                      <tr>
                        <td style="text-align: center"><%= data.isbn %></td>
                        <td style="text-align: center"><%= data.title %></td>
                        <td style="text-align: center"><%= data.author %></td>
                        <td style="text-align: center"><%= data.category %></td>
                        <td style="text-align: center"><%= data.status %></td>
                        <td style="text-align: center"><%= data.qty %></td>
                      </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
            </div><!--/.row-->

            <div id="hiddenParsed" style="display:none"></div>

          </section>
      </section>
